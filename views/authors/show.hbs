<div class="row">
    <div class="col s12 offset-s1">
        <h2>{{authors.name}}</h2>

        <a href="/authors/{{authors.id}}/edit" class="btn waves-effect waves-light black"><i
                class="material-icons left">edit</i>Edit</a></br></br>


                <form method='POST' action="/authors/{{authors.id}}?_method=DELETE">
                    <button type="submit" class="btn waves-effect waves-light black"><i
                            class="material-icons left">delete</i>Delete</button>
                </form>

                <h2>Books By Author</h2>
    </div>
</div>



<div class="row">

    {{#each bookByAuthor}}
    <div class=" col s6 m5 l4 offset-s1 offset-m1 offset-l1">
        <a href="/books/{{this.id}}">
            <img class="responsive-img" height="300" src="{{this.coverImageName}}">
        </a>

    </div>

    {{/each}}
</div>